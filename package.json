{
  "name": "statelint",
  "version": "0.1.0",
  "description": "Static analysis CLI to audit interactive state coverage in CSS and Tailwind codebases",
  "type": "module",
  "bin": {
    "statelint": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --packages=external && sed -i '1s|.*|#!/usr/bin/env node|' dist/cli.js",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "statelint": "bun src/cli.ts ./src",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitalratel/statelint.git"
  },
  "homepage": "https://github.com/vitalratel/statelint#readme",
  "bugs": {
    "url": "https://github.com/vitalratel/statelint/issues"
  },
  "keywords": [
    "css",
    "tailwind",
    "lint",
    "static-analysis",
    "accessibility",
    "hover",
    "focus",
    "interactive-states",
    "cli"
  ],
  "author": "Filipp Gnilyak",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/bun": "1.3.3",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/parser": "7.28.5",
    "@vue/compiler-sfc": "^3.5.25",
    "commander": "14.0.2",
    "cosmiconfig": "9.0.0",
    "fast-glob": "3.3.3",
    "postcss": "8.5.6",
    "svelte": "^5.45.2"
  }
}
